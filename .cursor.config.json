{
  "versionControl": {
    "ignorePaths": ["node_modules", ".next", ".git", "yarn.lock", ".DS_Store"]
  },
  "suggestions": {
    "enableOnType": true,
    "enableInComments": true,
    "enableInStrings": true
  },
  "format": {
    "enableOnSave": true,
    "formatWithPrettier": true,
    "prettierConfigPath": "prettier.config.js"
  },
  "projects": [
    {
      "name": "The Treehouse",
      "rootPath": ".",
      "paths": ["app", "prisma"],
      "ignore": []
    }
  ],
  "editor": {
    "formatOnSave": true,
    "tabSize": 2,
    "fontFamily": "monospace"
  },
  "telemetry": {
    "enabled": false
  },
  "fileSearch": {
    "excludePatterns": ["node_modules", ".next", ".git"]
  },
  "hotkeys": {
    "enabled": true
  },
  "language": {
    "typescript": {
      "enableTypeChecking": true
    },
    "javascript": {
      "enableLinting": true
    },
    "tailwindcss": {
      "enabled": true
    }
  },
  "ai": {
    "autocomplete": {
      "enabled": true,
      "language": {
        "typescript": true,
        "javascript": true,
        "css": true
      }
    }
  }
}
